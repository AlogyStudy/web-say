    <script src="/lib/jquery/dist/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript" charset="utf-8"></script>

		<script type="text/javascript">
			
			$('input').focus(function () {
				$('#cuowukuang').fadeOut();
			});
			
			$('#denglu').click(function () {
				
				// 提交表单
				$.post('/dologin', {
					
					'username': $('#inputUserName').val(),
					'password': $('#inputPassword').val()
					
				}, function ( reslust ) {
					
					if ( reslust == '1' ) {
						
						// 登陆成功
						location.href = '/';
						
					} else if ( reslust == '-1' ) {
						
						// 用户名不存在，请检查
						$('#cuowukuang').fadeIn();
						$('#cuowukuang').html('用户名不存在，请检查');

						
					} else if ( reslust == '-2' ) {
						
						// 密码错误
						$('#cuowukuang').fadeIn();
						$('#cuowukuang').html('密码错误！');
						
					} else if ( reslust == '-5' ) {
						
						// 服务器错误
						
					}
					
				});
				
			});
			
			
			// 点击发布业务
			$('#fabiao').click(function () {
				
				$.post('/post', {
					'content': $('#content').val()
				}, function ( result ) {
					
					if ( result == '1' ) {
						
						// 发表成功
						alert('发布成功');
						
					} else {
						
						alert('发布失败');
						
					}
					
				});
				
			});
			
		</script>

